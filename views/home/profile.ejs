<div class="row">
    <div class="col-lg-8 col-lg-offset-2 profile_well">
        <!-- <div class="col-md-4 text-center profile_image">
            <img class="profile_thumbnail" ng-src="{{user.image}}">
        </div> -->

        <div class="col-md-6 profile_image profile_font_color ">
            <div class="profile_stat" ng-style="profile_info_image">
                <h2 class="profile_stat_font" ng-bind="user.username"></h2>
                <!-- <h3 ng-bind="'課程'+user.level"></h3> -->
                <!-- <div class="profile_buttons">

                </div> -->
            </div>
        </div>

        <div class="col-md-6">
            <div class="profile_process_bar">
                <div class="calorie-counter">
                    <div class="chart chart--calorie js-chart">
                        <div class="chart__container">
                            <svg class="chart__background" x="0px" y="0px" height="220px" viewBox="0 0 220 220">
                                <g>
                                    <path d="M110,210c-55.1,0-100-44.9-100-100C10,54.9,54.9,10,110,10s100,44.9,100,100C210,165.1,165.1,210,110,210z" />
                                </g>
                            </svg>
                            <svg class="chart__foreground" ng-style="progress_length" x="0px" y="0px" height="220px" viewBox="0 0 220 220">
                                <g>
                                    <path d="M110,210c-55.1,0-100-44.9-100-100C10,54.9,54.9,10,110,10s100,44.9,100,100C210,165.1,165.1,210,110,210z" />
                                </g>
                            </svg>
                        </div>
                        <div class="chart__count">
                            <div>
                                <span class="js-count" count-to="{{user_get_point}}" duration="1" count-from="0">0</span> /
                                <span class="js-count" count-to="{{total_point}}" duration="1" count-from="0">0</span>
                            </div>
                            課程進度
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="profile_start_button_group" ng-show="start_learn">
            <a ng-show="start_learn_now" href="" class="profile_start_button" ng-click="ui_sref({url:'code'})">{{start_learn_btn_text}}</a>
            <a ng-hide="start_learn_now" href="" class="profile_start_button" ng-click="start_answer_survey()">{{start_learn_btn_text}}</a>
        </div>
    </div>
</div>
