<div class="row">
    <div class="col-md-6 profile_col_2">
        <div class="profile_counter">
            <h2>獎章</h2>
            <hr/>
            <md-button md-whiteframe="5" class="badge_icon_btn" aria-label="badge.arch_name" ng-repeat="badge in badges" gami-unit ng-click="gamiEmit_badge(badge)">
                <md-tooltip md-direction="bottom">
                    {{badge.name}}
                </md-tooltip>
                <md-icon md-svg-src="{{badge.image}}"></md-icon>
            </md-button>
            <!-- <div class="sport profile_badge_animation profilr_badge_info" ng-class="badge_color(badge.value)" ng-repeat="badge in badges" gami-unit>
                <img ng-src="{{badge.image}}" ng-click="gamiEmit_badge(badge)" />
                <label ng-bind="badge.name"></label>
            </div> -->
        </div>
    </div>
    <div class="col-md-6 profile_col_2">
        <div class="profile_counter">
            <h3>活動紀錄</h3>
            <hr/>
            <ul class="list-group profile_badge_animation">
                <li class="list-group-item profile_badge_info profile_log_list_group_term" ng-click="gamiEmit_log(user_log)" ng-repeat="user_log in user_logs" gami-unit>
                    <span ng-bind="user_log.timestamp"></span>
                    <span></span>
                    <span ng-bind="user_log.event_name"></span>
                </li>
            </ul>
        </div>
    </div>
</div>
